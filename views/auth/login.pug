doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Login – Jiwo

  
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Ovo&display=swap")

    link(rel="stylesheet", href="/styles.css")

  body
    .login-container
      .left-side
        img.login-bg(src="/images/login-bg.avif" alt="Background")

      .right-side
        h1 Welcome back
        p Sign in to your account to continue

        form(action="/login" method="POST")
          label(for="email") Username or Email
          input(type="text" name="email" id="email" required)

          label(for="password") Password
          input(type="password" name="password" id="password" required)

          a.forgot(href="#") Forgot Password?

          button(type="submit") Login

        p.register-text
          | Don’t have an account?
          a(href="/signup")  Sign up

